<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tutorialsbuzz.phrasebook.NewsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewHeaderHoroscope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:text=""
                android:textColor="@color/mycolor"
                android:textSize="2.5mm"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textViewDateHoroscope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewHeaderHoroscope"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:text=""
                android:textSize="2mm" />

            <ImageView
                android:id="@+id/imageViewHoroscope"
                android:layout_width="30mm"
                android:layout_height="30mm"
                android:layout_below="@+id/textViewDateHoroscope"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/textViewContentHoroscope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewHoroscope"
                android:layout_margin="1.8mm"
                android:text=""
                android:textColor="@color/acolor"
                android:textSize="2mm" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>