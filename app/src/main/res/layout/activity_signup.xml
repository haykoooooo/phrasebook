                    android:id="@+id/editText113"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890-_1234567890."
